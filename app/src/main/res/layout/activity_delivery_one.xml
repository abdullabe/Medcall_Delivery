<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.trackingmap.DeliveryOneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/map_image"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/purple"
            android:id="@+id/txtName"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/overpass_semibold"
            android:textStyle="bold"
            android:text="Pranab Batra"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/lnr_delivery_click"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/purple"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="Order ID:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/purple"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"

                android:id="@+id/txtOrderID"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="62949662"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="Shop:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:id="@+id/txtStore"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="Medcall 1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="Required to be picked:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:id="@+id/txtDate"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="18:45 27/02/2024"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="Destination:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#989898"
                android:layout_marginTop="5dp"
                android:id="@+id/txtDestination"
                android:layout_weight="1"

                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_semibold"
                android:textStyle="bold"
                android:text="45, Riya Villas, MadhuGunj Agra - 531749Â "/>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#989898"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/purple"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/overpass_semibold"
            android:textStyle="bold"
            android:text="Customer Order:"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recProducts"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#989898"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Total"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#989898"
                    android:id="@+id/txtTotal"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="276"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#989898"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Debit card:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Note:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Contact:"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#30BF23"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Paid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#989898"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="Please call me when you at the reception"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/purple"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtPhNo"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    android:fontFamily="@font/overpass_semibold"
                    android:textStyle="bold"
                    android:text="98974 64661"/>

                   </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:weightSum="2">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:id="@+id/cardAccept"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#30BF23"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:paddingLeft="25dp"
                    android:textAllCaps="true"

                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Accept"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:id="@+id/card_decline"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:textAllCaps="true"

                    android:paddingBottom="10dp"
                    android:text="Decline"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>