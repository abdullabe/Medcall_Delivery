<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.trackingmap.DeliverySuccessActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/success"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/overpass_semibold"
            android:textStyle="bold"
            android:text="Well Done Pranab Batra!"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/purple"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/overpass_semibold"
            android:textStyle="bold"
            android:text="You just delivered order #62949662"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:id="@+id/cardDelivered"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/purple"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:paddingLeft="25dp"
                android:textAllCaps="true"

                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Back to My deliveries"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>